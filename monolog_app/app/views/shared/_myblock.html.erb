<% if @users.any? %>
  <% @users.each do |item| %>
  <div style="float: left;
              background-color: #f5f5f5;
              margin: 2px 3px 2px 3px;
              width: 300px;
              height: 100px">
    <% @item = item %>
    <% if item.picture? %>
      <%= image_tag(item.picture, alt: item.name, width: '100', height: '100') %>
    <% else %>
      <%= image_tag("top.png", alt: item.name, width: '100', height: '100') %>
    <% end %>
    <%= link_to item.name,'users/' + item.user_id %>
    </div>
  <% end %>
  <%= will_paginate @users, :param_name => 'block',:params=> {:now=>"block"} %>
<% end %>