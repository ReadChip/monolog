<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.text_field :user_id, class: 'form-control', placeholder: "ユーザーID" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
  </div>
  <%= f.check_box :remember_me %>
          
          <span>ログイン状態を維持する</span>
  <div class="form-group">
    <%= f.submit "ログイン", class: "btn btn-warning" %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
  </div>
  パスワードを忘れた方は<%= link_to "こちら", new_password_reset_path %>
<% end %>

