  <div><%= hidden_field_tag :url, @url %></div>
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-6 col-xs-3 col-sm-offset-9 col-sm-3 col-md-offset-9 col-md-3 col-lg-offset-9 col-lg-3">
        <div class="block"><%= f.submit "ブロックする", class: "btn btn-warning" %></div>
      </div>
    </div>
  </div>  
<% end %>