 <div class="container hmenu">
    <div class="row">
    
       <div class="col-xs-offset-2  col-sm-3 col-sm-offset-0   col-lg-3 col-lg-offset-0">
       <% if current_user.picture? %>
         <%= image_tag(current_user.picture, alt: current_user.name, width: '160', height: '160') %>
       <% else %>
         <%= image_tag("top.png", alt: current_user.name, width: '160', height: '160') %>
       <% end %>

       </div>

       <div class="col-sm-9  col-lg-9">
         <div class="row">

          <div class="name">
            <div class="col-xs-1  col-lg-1">
              <div class="glyphicon glyphicon-user"></div>
            </div>
            <div class="col-xs-8  col-lg-11">
              <div class="husername"><%= current_user.name %></div> 
            </div>
          </div>

          <div class="comment">
            <div class="col-xs-1  col-lg-1">
              <div class="glyphicon glyphicon-comment"></div>
            </div>
            <div class="col-xs-12   col-lg-8">
              <div class="huserprofile"><%= current_user.profile %></div>
            </div>
          </div>

         </div>
       </div>

    </div>
</div>



<div class="container hemit">
  <div class="tab">
  <%= form_for(@user, url: mypage_path, method: 'get', remote: true) do |f| %>
    <%= f.submit "My Emit",id: "emit",name: "emit", style: "color:#1A1A1C;
                                                     background-color:#BBCCDD;
                                                     border:none;
                                                     cursor : default;" %>
                                                     |
    <%= f.submit "My Like",id: "like",name: "like", style: "color:#1A1A1C;
                                                     background-color:#f5f5f5;
                                                     border:none;
                                                     cursor : default;" %>
                                                     |
    <%= f.submit "Block List",id: "block",name: "block", style: "color:#1A1A1C;
                                                     background-color:#f5f5f5;
                                                     border:none;
                                                     cursor : default;" %>
  <% end %>
  
  </div>
  <div class="row">
    <div id="myemit">
      <%= render 'shared/myfeed' %>
    </div>
    <div id="mylike">
       <%= render 'shared/mylike' %>
    </div>
    <div id="myblock">
      <%= render 'shared/myblock' %>
    </div>
  </div>
</div>

<% if params[:now].nil? || params[:now] == "emit" %>
<script>
document.getElementById('myemit').style.display = "block";
document.getElementById('mylike').style.display = "none";
document.getElementById('myblock').style.display = "none";
document.getElementById('emit')
.style.backgroundColor = "#BBCCDD";
document.getElementById('like')
.style.backgroundColor = "#f5f5f5";
document.getElementById('block')
.style.backgroundColor = "#f5f5f5";
</script>
<% elsif params[:now].nil? || params[:now] == "like" %>
<script>
document.getElementById('myemit').style.display = "none";
document.getElementById('mylike').style.display = "block";
document.getElementById('myblock').style.display = "none";
document.getElementById('emit')
.style.backgroundColor = "#f5f5f5";
document.getElementById('like')
.style.backgroundColor = "#BBCCDD";
document.getElementById('block')
.style.backgroundColor = "#f5f5f5";
</script>
<% elsif params[:now].nil? || params[:now] == "block" %>
<script>
document.getElementById('myemit').style.display = "none";
document.getElementById('mylike').style.display = "none";
document.getElementById('myblock').style.display = "block";
document.getElementById('emit')
.style.backgroundColor = "#f5f5f5";
document.getElementById('like')
.style.backgroundColor = "#f5f5f5";
document.getElementById('block')
.style.backgroundColor = "#BBCCDD";
</script>
<% else %>
<script>
document.getElementById('myemit').style.display = "none";
document.getElementById('mylike').style.display = "none";
document.getElementById('myblock').style.display = "none";
document.getElementById('emit')
.style.backgroundColor = "#f5f5f5";
document.getElementById('like')
.style.backgroundColor = "#f5f5f5";
document.getElementById('block')
.style.backgroundColor = "#f5f5f5";
</script>
<% end %>